{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["bun-types"],
		"outDir": "build",
		"rootDir": "src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
